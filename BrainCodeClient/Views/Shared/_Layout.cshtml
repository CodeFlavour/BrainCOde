<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-default" style="background-color:#f38148;padding:0;">
        <div class="container-fluid">
            <ul class="nav navbar-nav" style="color:white">
                <li><a href="@Url.Action("Index")">Alle co wyszukać?</a></li>
                <li><a href="@Url.Action("Naming")">Alle jak nazwać?</a></li>
            </ul>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Brain Code 2017 - PentaCoders</p>
        </footer>
    </div>

   
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
